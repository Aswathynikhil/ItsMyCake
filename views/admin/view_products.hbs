<section class="section" style="background-color:rgba(255, 191, 191, 1) ; height: 100vh;" >
  <div class="container">
    <div class="row ">
      <div class="admin-operations">
        <a href="/admin/add_product" class="btn  " style="background-color: rgb(55, 19, 19); color: white;margin-top: 100px; margin-bottom: 30px;">Add Product</a>
      </div>
    </div>
    <table class="table-responsive mt-5"  id="productTable">
      <thead class="thead" style="background-color: rgb(55, 14, 14); color: white;">
        <tr>
          <th scope="col">Product Name</th>
          <th scope="col">Category</th>
          <th scope="col">Sub Category</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          {{!-- <th scope="col">Product Weight(kg)</th> --}}
          <th scope="col">Discount(%)</th>
          <th scope="col">Main image</th>
          {{!-- <th scope="col">Auxiliary Image</th> --}}
          <th scope="col">Options</th>

        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr >
          <td >{{this.product_name}}</td>
          {{!-- <td>{{this.catagory}}</td> --}}
           <td >{{this.catagory.catagory}}</td>
          <td >{{this.subCatagory.subcatagory}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          {{!-- <td style="text-align: center;">{{this.product_weight}}</td> --}}
          <td style="text-align: center;">{{this.discount}}</td>
          <td><img style="height: 50px; width: 50px;" src="/product_Images/{{this.allImages.[0].main_i}}" alt=""></td>
          {{!-- <td><img style="height: 50px; width: 50px;" src="/product_Images/{{this.allImages.[0].next_i}}" alt=""></td>
           <td><img style="height: 50px; width: 50px;" src="/product_Images/{{this.allImages.[0].next_i_1}}" alt=""></td>
            <td><img style="height: 50px; width: 50px;" src="/product_Images/{{this.allImages.[0].next_i_2}}" alt=""></td> --}}
          {{!-- <td><img style="height: 50px; width: 50px;" src="{{this.auxiliary_images}}" alt=""></td> --}}
          <td class="td-icon " >
            <a href="/admin/edit_product/{{this._id}}" class="btn" style="color: black;" ><i class='bx bx-edit-alt'></i></a>
            <a href="/admin/delete_product/{{this._id}}" class="btn" style="color: black;"
              onclick="return confirm('Are you want to delete{{this.product_name}}?')"><i class='bx bxs-trash'></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  </div>
</section>
<script>
  $(document).ready( function () {
    $("#productTable").DataTable();
} );
</script>
