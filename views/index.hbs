

<section class="section" style="background-color: rgba(255, 191, 191, 1);">
  <div class="row">
    <div class=" col-12 col-md-12" style="margin-top:-60px;">


      <div id="carouselExampleControls" class="carousel slide " style="margin-top: 90px;" data-bs-ride="carousel" data-transition="slide"  data-interval="5000">
      
        <div class="carousel-inner">


            {{#each images}}
          <div class="carousel-item ">
            <img src="/product_Images/{{this.image}}" class="d-block w-100 h-100" alt="">
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          </div>
           {{/each}}
        </div>
          
      </div> 
  
    
   
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class=" flex-direction: column">

          <form class="mt-5 d-flex justify-content-center" action="/search" method="post">

            <input type="text" name="search_name" class="form-control" style="width: 500px;" required />
            <button class="btn " style="background-color: rgb(44, 7, 7); color: white;" type="submit">Search</button>
          </form>
          <h2 class="heading_cake mt-5 text-center "
            style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;font-weight: 600;color: brown;">
            Our Cakes</h2>
          {{#if message}}
          <p class="error" style="color: rgb(78, 7, 19);">{{message}}</p>
          {{/if}}

        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      {{#each products}}
      <div class="col-12 col-sm-6 col-md-4 col-lg-6 col-xl-3 p-3 d-flex justify-content-center">
        <div class="card"
          style="width: 18rem; height: 25rem; background-image: linear-gradient(135deg, #FFAA85 10%, #B3315F 100%);">
          <a href="/product_details/{{this._id}}"><img src="/product_Images/{{this.allImages.[0].main_i}}"
              class="card-img-top" alt="..."> </a>
          <div class="card-body">
            <h5 class="card-title "
              style="font-size:20px ; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif, serif;color: rgb(40, 6, 6);">
              {{this.product_name}}</h5>
            <h6 class="price" style="color: rgb(50, 10, 10); font-weight: 900;">Rs.{{this.price}}</h6>


          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
<script>
  $(document).ready(function(){
  $('.carousel-item:first-child').addClass('active')
  })
</script>
