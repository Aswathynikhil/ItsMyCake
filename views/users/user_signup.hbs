

<section class="100vh" style="background-color:rgba(255, 191, 191, 1) ;">
  <div class="container ">
    <div class="row d-flex justify-content-center align-items-center mt-5"  >
     
      <div class="col-lg-12 col-xl-11" >
        
        <div class="card text-black" style="border-radius: 25px;background-image: linear-gradient(135deg, #FFD3A5 10%, #FD6585 100%);">
 
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;color: rgb(40, 6, 6);">Sign up</p>

                <form action="/user_signup" method="post" id="signup-form">

                <div>
                  <label class="form-label">Name</label>
                  <input type="text" id="name" name="name" class="form-control" />
                </div>
                <div>
                  <label class="form-label">Email</label>
                  <input type="email" id="email" name="email" class="form-control" />
                </div>
                <div>
                  <label class="form-label">Phone</label>
                  <input type="tel" id="phone" name="phone" class="form-control" />
                </div>
                <div>
                  <label class="form-label">Address</label>
                  <input type="text" id="address" name="address" class="form-control" />
                </div>
                <div>
                  <label class="form-label">Place</label>
                  <input type="text" id="place" name="place" class="form-control" />
                </div>
                <div>
                  <label class="form-label">Pincode</label>
                  <input type="number" id="pincode" name="pincode" class="form-control" />
                </div>
                <div>
                  <label class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" />
                </div>
                    <div>
                  <label class="form-label">Confirm Password</label>
                  <input type="password" id="repassword" name="repassword" class="form-control" required/>
                </div>

                <div class="text-center pt-1 mb-5 pb-1">

                  <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 mt-4 " style="width: 200px;" type="submit">Signup</button>
                </div> 


                {{!-- {{#if message}}
                <p class="error" style="color: red;">{{message}}</p> 
                {{/if}} --}}
                 <div class="d-flex align-items-center justify-content-center pb-4">
                  <a class="mb-0 me-2" style="text-decoration: none; color: rgb(51, 6, 6);" href="/user_login">Already have an account?</a>
                </div>

              </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="images/signup.png"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>